<GridPane fx:controller="fxBuild.Controller"
  xmlns:fx="http://javafx.com/fxml"
  alignment="top_center" hgap="10" vgap="10"
  >
<Button text="Submit" GridPane.rowIndex="0" GridPane.columnIndex="0"
  style="-fx-font-family: Times New Roman; -fx-font-size: 50px; -fx-font-weight: bold"
  />
  <Button text="Reset" prefWidth="90" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
  <Button text="Cancel" prefWidth="90" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
  <fx:define>
    <ToggleGroup fx:id="exToggle"/>
  </fx:define>
  <RadioButton text="ROne" GridPane.rowIndex="3" GridPane.columnIndex="0" toggleGroup="$exToggle"/>
  <RadioButton text="RTwo" GridPane.rowIndex="4" GridPane.columnIndex="0" toggleGroup="$exToggle" selected="true"/>
  <RadioButton text="RThree" GridPane.rowIndex="5" GridPane.columnIndex="0" toggleGroup="$exToggle"/>
</GridPane>
